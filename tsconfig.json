{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "noEmit": true,
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [".*", "node_modules", "dist", "lib", "out", "coverage"]
}
